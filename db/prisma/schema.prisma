
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id     @default(autoincrement())
  name      String?
  email     String     @unique 
  password  String?
  provider  Provider   @default(CREDENTIALS)
  createdAt DateTime   @default(now())
  projects  Project[]
}

model Project {
  id          String    @id     @default(cuid())
  prompt      Prompt[] 
  steps       Steps[]
  chat        Chat[]
  userId      Int
  createdAt   DateTime          @default(now())
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Prompt {
  id              String    @id     @default(cuid())
  originalPrompt  String
  appPrompt       String
  projectId       String      
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now())
}


model Steps {
  id            String    @id     @default(cuid())
  projectId     String    
  steps         Json[]
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Chat {
  id           String    @id      @default(cuid())
  projectId    String   
  message      String
  role         Role
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade) 
  createdAt    DateTime @default(now())
}

enum Provider{
  CREDENTIALS
  GOOGLE
}

enum Role {
  USER
  ASSISTANT
}

